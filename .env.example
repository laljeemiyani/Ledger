# Environment Configuration
# Copy this to .env and update values

# Node Environment
NODE_ENV=development

# Python Path
PYTHON_PATH=./venv/bin/python

# Directories
PDF_TEMP_DIR=./temp/pdfs
OUTPUT_DIR=./output

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Supported Banks
SUPPORTED_BANKS=SBI,HDFC,ICICI,AXIS,KOTAK,PNB,BOB,CANARA,UNION,INDUSIND

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Database (if needed later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ledger
# DB_USER=admin
# DB_PASSWORD=changeme

# API Configuration (if needed later)
# API_PORT=3000
# API_HOST=localhost
